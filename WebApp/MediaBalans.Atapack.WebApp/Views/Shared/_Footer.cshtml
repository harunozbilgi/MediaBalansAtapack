@{
    var config = (await configService.GetByAppConfigAsync()).Data;
    string lang = ViewBag.Lang;
}
<footer>
    <div class="footer-top">
        <div class="container">
            <div class="footer-top-main d-flex align-items-center flex-column">
                <div class="footer-logo">
                    <img class="svg" src="~/assets/img/icons/logo-footer.svg" alt="atapack-footer-logo">
                </div>
                <ul class="social-list d-flex align-items-center my-5">
                    <li class="social-item me-4">
                        <a href="@config.Facebook" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </li>
                    <li class="social-item me-4">
                        <a href="@config.Instagram" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </li>
                    <li class="social-item">
                        <a href="@config.Twitter" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </li>
                </ul>
                <ul class="info-list d-flex flex-column flex-lg-row align-items-center">
                    <li class="info-item me-0 me-lg-5 mb-3 mb-lg-0">
                        <a href="tel:@config.PhoneNumber" class="d-flex align-items-center">
                            <i class="bi bi-telephone-fill me-2"></i>
                            @config.PhoneNumber
                        </a>
                    </li>
                    <li class="info-item me-0 me-lg-5 mb-3 mb-lg-0">
                        <a href="tel:@config.PhoneNumberOne" class="d-flex align-items-center">
                            <i class="bi bi-telephone-fill me-2"></i>
                            @config.PhoneNumberOne
                        </a>
                    </li>
                    <li class="info-item">
                        <a href="mailto:@config.Email"  class="d-flex align-items-center">
                            <i class="bi bi-envelope-fill me-2"></i>
                           @config.Email
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="copright-main">
        <div class="container">
            <div class="copyright">
                <p class="text-center">© @DateTime.Now Atapack.@configuration[$"Copyright:{lang}"]</p>
            </div>
        </div>
    </div>
</footer>

<div class="overlay-body w-100 position-fixed top-0"></div>