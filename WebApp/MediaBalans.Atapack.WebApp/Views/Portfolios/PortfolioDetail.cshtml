@model PortfoliosViewModel
@{
    string lang = ViewBag.Lang;
}
<style>
    .modal-open {
        padding-right: 0px !important;
        overflow: hidden !important;
    }
</style>
<div class="modal fade modal-image-partner" data-bs-backdrop="static" id="images-modal" tabindex="-1"
     aria-labelledby="images-modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="swiper images-slider">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.Portfolio.PortfolioFiles)
                        {
                            <div class="swiper-slide">
                                <img src="@await Component.InvokeAsync("Image", new { FileCode = item.FileCode  })"
                                 class="swiper-lazy" />
                            </div>
                        }
                    </div>
                    <div class="swiper-navs">
                        <button class="btn swiper-prev">
                            <i class="bi bi-arrow-left-short"></i>
                        </button>
                        <button class="btn swiper-next">
                            <i class="bi bi-arrow-right-short"></i>
                        </button>
                    </div>
                </div>
               @* <div class="modal-image-text">
                    @{
                        var languageText = Model.Portfolio.PortfolioLanguages.FirstOrDefault(x => x.Lang_Code == lang);
                    }
                    <p class="heading">@languageText.Title</p>
                    <p class="text">
                        @languageText.Description
                    </p>
                </div>*@
            </div>
            <button class="btn btn-modal-closed" data-bs-dismiss="modal" aria-label="Close">
                <i class="bi bi-x"></i>
            </button>
        </div>
    </div>
</div>
<script>
    var imagesswiper = new Swiper(".images-slider", {
      spaceBetween: 30,
      lazy: true,
      effect: 'fade',
      speed: 300,
      navigation: {
        nextEl: ".swiper-next",
        prevEl: ".swiper-prev",
      },
    });
</script>