@{
    ViewData["Title"] = "Index";
    var config = (await configService.GetByAppConfigAsync()).Data;
    string lang = ViewBag.Lang;
}
@section seo{
 @await Component.InvokeAsync("Seo", new { Page = "Contact"  })
}
<section>
    <div class="alaqa-main">
        <div class="container">
            <div class="partner-heading">
                <p class="page-heading">@configuration[$"Contact.Title:{lang}"]</p>
@*                <p class="page-text">
                    @configuration[$"Contact.Text:{lang}"]
                </p>*@
            </div>
            <div class="alaqa-info-main mb-5">
                <div class="row">
                    <div class="col-12 mb-5">
                        <div class="google-map">
                            <iframe src="@config.Map"
                                    width="100%" height="100%" style="border:0;" allowfullscreen=""
                                    loading="lazy"></iframe>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="info-box">
                            <p class="info-heading mb-3 mb-lg-5">@configuration[$"Contact.Address:{lang}"]</p>
                            <p class="text-unvan">@config.Address</p>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-4 mt-4 mt-md-0">
                        <div class="info-box">
                            <p class="info-heading mb-3 mb-lg-5">@configuration[$"Contact.Title:{lang}"]</p>
                            <ul class="info-list d-flex flex-column">
                                <li class="info-item mb-4">
                                    <a href="tel:@config.PhoneNumber" class="d-flex align-items-center">
                                        <i class="bi bi-telephone-fill me-2"></i>
                                        @config.PhoneNumber
                                    </a>
                                </li>
                                <li class="info-item mb-4">
                                    <a href="tel:@config.PhoneNumberOne" class="d-flex align-items-center">
                                        <i class="bi bi-telephone-fill me-2"></i>
                                        @config.PhoneNumberOne
                                    </a>
                                </li>
                                <li class="info-item">
                                    <a href="mailto:@config.Email" class="d-flex align-items-center">
                                        <i class="bi bi-envelope-fill me-2"></i>
                                        @config.Email
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-4 mt-5 mt-xl-0">
                        <div class="info-box">
                            <p class="info-heading mb-3 mb-lg-5">@configuration[$"Contact.Social.Text:{lang}"]</p>
                            <ul class="social-list d-flex align-items-center">
                                <li class="social-item me-4">
                                    <a href="@config.Facebook" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                                        <i class="bi bi-facebook"></i>
                                    </a>
                                </li>
                                <li class="social-item me-4">
                                    <a href="@config.Instagram" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                                        <i class="bi bi-instagram"></i>
                                    </a>
                                </li>
                                <li class="social-item">
                                    <a href="@config.Twitter" target="_blank" class="social-links d-flex align-items-center justify-content-center">
                                        <i class="bi bi-linkedin"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

