@{
    ViewData["Title"] = "Edit";
}
@model CategoryViewModel
<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="edit-3"></i></span>
                        Kategori Güncelle
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <form id="fromloading" enctype="multipart/form-data" asp-action="Edit" asp-antiforgery="true">
        <div class="row">
            <div class="col-xl-8">
                <div class="card card-header-actions mb-4">
                    <div class="card-header">
                        Tercüme edilecek alanlar
                    </div>
                    <div class="card-body">
                        @{
                            int langCount = 0;
                            int langCountPanel = 0;
                        }
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                            @foreach (var item in (await languageService.GetLanguagesAsync()).Data.ToList())
                            {
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link @(langCount == 0 ? "active": "") "
                                        id="pills-lang-tab-@item.LangCode"
                                        data-bs-toggle="pill"
                                        data-bs-target="#pills-lang-@item.LangCode"
                                        type="button"
                                        role="tab"
                                        aria-controls="pills-lang-@item.LangCode"
                                        aria-selected="@(langCount == 0 ? "true": "false")">
                                        @item.FullName
                                    </button>
                                </li>
                                langCount++;
                            }
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            @foreach (var item in Model.CategoryLanguages)
                            {
                                <div class="tab-pane fade @(langCountPanel == 0 ? "show active": "")" id="pills-lang-@item.Lang_Code" role="tabpanel" aria-labelledby="pills-lang-tab-@item.Lang_Code">
                                    <div class="form-group mb-3">
                                        <label class="form-label" asp-for="CategoryLanguages[langCountPanel].Title">Başlık - @item.Lang_Code</label>
                                        <input type="text" class="form-control" asp-for="CategoryLanguages[langCountPanel].Title">
                                        <span class="text-danger" asp-validation-for="CategoryLanguages[langCountPanel].Title"></span>
                                    </div>
                                    <input type="hidden" asp-for="CategoryLanguages[langCountPanel].Id" value="@item.Id" />
                                    <input type="hidden" asp-for="CategoryLanguages[langCountPanel].CategoryId" value="@item.CategoryId" />
                                    <input type="hidden" asp-for="CategoryLanguages[langCountPanel].Lang_Code" value="@item.Lang_Code" />
                                    <input type="hidden" asp-for="CategoryLanguages[langCountPanel].CreateTime" value="@item.CreateTime" />
                                </div>
                                langCountPanel++;
                            }
                        </div>
                        <input type="hidden" asp-for=Category.Id />
                        <input type="hidden" asp-for=Category.OrderBy />
                        <input type="hidden" asp-for=Category.IsActive />
                        <input type="hidden" asp-for=Category.CreateTime />
                        <div class="bn">
                            <button type="submit" class="btn  btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn  btn-dark">Vazgeç</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Validation{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

}

@section Scripts{
<script>
    $(document).on("submit", "#fromloading", function () {
        $(this).find('button[type="submit"]')
        $(this).find('button[type="submit"]').attr("disabled", "true");
        $(this).find('button[type="submit"]').html('');
        $(this).find('button[type="submit"]').append('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>Kaydet...')
        setTimeout(() => {
            $(this).find('.spinner-border').remove();
            $(this).find('button[type="submit"]').append('Kaydet');
            $(this).find('button[type="submit"]').attr("disabled", "false");
        }, 2000);
    });
</script>
}
